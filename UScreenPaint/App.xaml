<Application x:Class="UScreenPaint.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UScreenPaint"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Converters-->
                <ResourceDictionary Source="ToolKit/Converters.xaml"/>
                
                <!--Themes-->
                <ResourceDictionary Source="Assets/Themes/Generic.xaml"/>
                
                <!--Localization-->
                <ResourceDictionary Source="Assets/Localization/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
